{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist"
    },
    "include" : [
      "**/*.ts"   /* Include every ts file in source folder */
    ],
    "exclude" : [
        "node_modules"  /* exclude everything in  node_modules */
    ],
    "lib": ["es2015"]
}
